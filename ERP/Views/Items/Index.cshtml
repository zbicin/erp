@using Newtonsoft.Json
@model IEnumerable<ERP.Models.Item>

@{
    ViewBag.Title = "Index";
    var viewBagAlertMessages = JsonConvert.SerializeObject(ViewBag.AlertMessages);
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityInStock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityInStock)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>


    <script>
        var alertMessages = @(Html.Raw(viewBagAlertMessages));
        if (alertMessages.length > 0) {
            var message = "";
            for (var i = 0; i < alertMessages.length; i++) {
                message = message.concat(alertMessages[i]+"\n");
            }
            alert(message);
        }
    </script>