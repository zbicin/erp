@model ERP.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompletedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompletedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShippedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShippedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DeliveredAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeliveredAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CanceledAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CanceledAt)
        </dd>

    </dl>
    <div>
        <h4>Items</h4>
        <dl>
            @foreach (var orderElement in Model.SelectedItems)
            {
                <dt>Name</dt>
                <dd>@orderElement.ItemName</dd>
                <dt>Quantity</dt>
                <dd>@orderElement.Quantity</dd>
                <br />
            }
        </dl>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
